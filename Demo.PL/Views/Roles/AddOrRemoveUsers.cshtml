@model List<UserInRoleViewModel>

@{
    ViewData["Title"] = "AddOrRemoveUsers";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var RoleId = ViewBag.RoleId;
}

<h1>Add Or Remove Users</h1>
<br />

<form class="my-3" asp-action="AddOrRemoveUsers" asp-route-roleId="@RoleId">
    @for(var i = 0; i < Model.Count; i++)
    {
        <div class="form-group">
            <input asp-for="@Model[i].IsSelected"/>
            <label asp-for="@Model[i].IsSelected">@Model[i].UserName</label>
        </div>

        <input type="hidden" asp-for="@Model[i].UserId" />
        <input type="hidden" asp-for="@Model[i].UserName" />
    }
    <div class ="my-3">
        <input type="submit" value="Update" class="btn btn-success" />
        <a asp-action="Update" asp-controller="Roles" asp-route-id="@RoleId" class="btn btn-light">Back To List</a>
    </div>
</form>